@model CarRentalApp.Models.CarModel

@{
    ViewData["Title"] = "Book by ID";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>BookId</th>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Publication Year</th>
            <th>Genre</th>
            <th>IsAvailable</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.BookId</td>
            <td>@Model.Title</td>
            <td>@Model.Author</td>
            <td>@Model.ISBN</td>
            <td>@Model.PublicationYear</td>
            <td>@Model.Genre</td>
            <td>@Model.IsAvailable</td>
            <td>
                <!-- Update link -->
                <a asp-controller="Book" asp-action="UpdateBook" asp-route-id="@Model.BookId" class="mb-1 btn btn-primary">Update</a>
                <!-- Delete form -->
                <form asp-controller="Book" asp-action="DeleteBook" asp-route-id="@Model.BookId" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
                    <button type="submit" class="btn btn-danger mb-1">Delete</button>
                </form>
            </td>
        </tr>
    </tbody>

</table>
