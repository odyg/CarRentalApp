@model CarRentalApp.Models.ReservationModel

@{
    ViewData["Title"] = "Add Borrowing";
}


<h2>@ViewData["Title"]</h2>

<form asp-action="AddBorrowing" method="post" asp-controller="Borrowing">
    <div class="mb-1">
        <label asp-for="BookId"></label>
        <input asp-for="BookId" />
    </div>
    <div class="mb-1">
        <label asp-for="ReaderId"></label>
        <input asp-for="ReaderId" />
    </div>
    <div class="mb-1">
        <label asp-for="BorrowDate"></label>
        <input asp-for="BorrowDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
    </div>
    
    <!-- Repeat for other fields -->
    <div class="mb-1">
        <input type="submit" value="Add Borrowing" class="btn btn-success mb-1" />
    </div>
</form>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(modelState => modelState.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}